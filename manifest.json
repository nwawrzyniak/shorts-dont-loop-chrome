{
  "manifest_version": 3,
  "name": "Shorts don't loop",
  "description": "A Google Chrome extension that prevents YouTube Shorts from looping.",
  "version": "1.1.4",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "graphics/16.png",
      "32": "graphics/32.png",
      "48": "graphics/48.png",
      "64": "graphics/nav_bar.png",
      "128": "graphics/128.png"
    }
  },
  "icons": {
    "16": "graphics/16.png",
    "32": "graphics/32.png",
    "48": "graphics/48.png",
    "64": "graphics/64.png",
    "128": "graphics/128.png",
    "256": "graphics/256.png"
  },
  "background": {
    "service_worker": "service-workers/icon.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "content-scripts/sdl.js"
      ],
      "matches": [
        "https://*.youtube.com/*"
      ],
      "exclude_matches": [
        "https://studio.youtube.com/*",
        "https://*.youtube.com/embed*"
      ]
    }
  ],
  "homepage_url": "https://www.nwawsoft.com",
  "author": {
    "email": "team@nwawsoft.com"
  }
}
